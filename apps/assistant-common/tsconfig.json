{
  "extends": [
    "../../tsconfig.dom.json"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./public/*",
        "../../*"
      ],
      "@assets/*": [
        "../../assets/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json",
  ],
  "references": [
    {"path": "../../packages/frontend"},
    {"path": "../assistant-backend"},
  ]
}
